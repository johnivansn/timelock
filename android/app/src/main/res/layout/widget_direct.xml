<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/widget_container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/widget_background"
  android:orientation="vertical"
  android:padding="12dp">

  <TextView
    android:id="@+id/widget_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:text="Bloqueos directos"
    android:textColor="#FFFFFF"
    android:textSize="14sp"
    android:textStyle="bold" />

  <LinearLayout
    android:id="@+id/block_list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
      android:id="@+id/block1_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="6dp"
      android:background="@drawable/widget_item_card"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="8dp">

      <ImageView
        android:id="@+id/block1_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="6dp"
        android:contentDescription="@string/app_name" />

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
          android:id="@+id/block1_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:singleLine="true"
          android:text="App"
          android:textColor="#FFFFFF"
          android:textSize="12sp"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/block1_type"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="2"
          android:text="Horario"
          android:textColor="#CCCCCC"
          android:textSize="10sp" />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/block2_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="6dp"
      android:background="@drawable/widget_item_card"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="8dp">

      <ImageView
        android:id="@+id/block2_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="6dp"
        android:contentDescription="@string/app_name" />

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
          android:id="@+id/block2_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:singleLine="true"
          android:text="App"
          android:textColor="#FFFFFF"
          android:textSize="12sp"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/block2_type"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="2"
          android:text="Fecha"
          android:textColor="#CCCCCC"
          android:textSize="10sp" />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/block3_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/widget_item_card"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="8dp">

      <ImageView
        android:id="@+id/block3_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="6dp"
        android:contentDescription="@string/app_name" />

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
          android:id="@+id/block3_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:singleLine="true"
          android:text="App"
          android:textColor="#FFFFFF"
          android:textSize="12sp"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/block3_type"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="2"
          android:text="Mixto"
          android:textColor="#CCCCCC"
          android:textSize="10sp" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
